{% extends 'base.html.twig' %}

{% block title %} Kategorie na blogu {% endblock %}

 {% block body %}
     <div class="container">
         <table id="articles" class="table table-striped">
             <thead>
             <tr>
                 <th>Post id</th>
                 <th>nazwa</th>
                 <th>Actions</th>
             </tr>
             </thead>
             <tbody>
             {% for category in category %}
                 <tr>
                     <td>{{ category.id }}</td>
                     <td>{{ category.name }}</td>
                     <td>
                         <a target="_blank"
                            href=""
                            class="btn btn-dark">show</a>
                         <a href="{{ path('category_edit',{'id':category.id}) }}" class="btn btn-primary">edit</a>
                         <a href="#" class="btn btn-danger delete-article" data-id="">Delete</a>
                     </td>
                 </tr>
             {% endfor %}
             </tbody>
         </table>
         <a class="btn btn-success btn-lg btn-block" href="{{ path('category_add') }}">Dodaj kategorie</a>
     </div>
 {% endblock %}

