{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}
{% block keywords %}{{ post.keyworks }}{% endblock %}
{% block description %}{{ post.description }}{% endblock %}
{% block body %}
    <article class="container-fluid">
        <section class="padding-post-img" style="background: rgba(0, 0, 0, 0)">
            <div class="container" >
                <div class="row blog-post white-font">
                    <div class="col-lg-12">
                        <h3 class="wow bounceInDown" style="margin-bottom: 20px" data-wow-delay="0.5s"><div class="black-bg-post">{{ post.title }}</div></h3>
                    </div>
                    <div class="col-lg-6">
                        <h5 class="text-left text-center-md wow slideInLeft" data-wow-delay="0.2s" style="margin-bottom: 20px"><div class="black-bg-post"><b>{{ post.publishedAt|date('Y-m-d') }}</b></div></h5>
                    </div>
                    <div class="col-lg-6">
                        <h5 class="text-right text-center-md wow slideInRight" data-wow-delay="0.2s" style="margin-bottom: 20px"><div class="black-bg-post"><b>Autor: Grzegorz Tarka</b></div></h5>
                    </div>
                </div>
            </div>
        </section>
    </article>
<div class="container">
    {{ post.content|raw }}
</div>

<div class="container">
    {% if not post.tags.empty %}
        <p class="post-tags">
            {% for tag in post.tags %}
                <a href="{{ path('post_by_tag',{'slug':tag.slug})}}">
                <span class="badge badge-dark">
                    <i class="fa fa-tag"></i> {{ tag.name }}
                </span>
                </a>
            {% endfor %}
        </p>
    {% endif %}
</div>











{% endblock %}
