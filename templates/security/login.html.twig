{% extends 'base.html.twig' %}
{% block title %} Panel logowania {% endblock %}
{% block body %}
	<div class="container">
	{% if error %}
		<br>
		<br>
		<br>
		<div class="alert alert-danger">
			{{ error.messageKey|trans(error.messageData, 'security') }}
		</div>
	{% endif %}
		<div class="row">
			
			
			<div class="col-sm-8 offset-2" style="border:1px solid black;border-radius:5px;margin-top: 5%;padding:50px 10px">
				<div class="well" >
					<form action="{{ path('security_login') }}" method="post">
						<fieldset>
							<legend><i class="fa fa-lock" aria-hidden="true"></i> Panel logowania</legend>
							<div class="form-group">
								<label for="username">uzytkownik</label>
								<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
							</div>
							<div class="form-group">
								<label for="password">hasło</label>
								<input type="password" id="password" name="_password" class="form-control" />
							</div>
							<input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
							<button type="submit" class="btn btn-primary">
							<i class="fa fa-sign-in" aria-hidden="true"></i> Zaloguj się
							</button>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}